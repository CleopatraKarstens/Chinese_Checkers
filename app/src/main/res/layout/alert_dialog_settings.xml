<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textSize="25sp"
            android:text="@string/screen_always_on"/>

        <ToggleButton
            android:id="@+id/toggle_screen_on"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>


    <Space
        android:layout_width="match_parent"
        android:layout_height="50dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/ib_music_volume"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="0"/>

        <SeekBar
            android:id="@+id/sb_music_volume"
            android:layout_gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:max="100"/>

        <ImageButton
            android:visibility="invisible"
            android:id="@+id/ibNextTrack"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/next_track"/>
    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="50dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/ib_sound_volume"
            android:layout_width="50dp"
            android:layout_height="50dp"/>

        <SeekBar
            android:id="@+id/sb_sound_volume"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:max="100"/>
    </LinearLayout>
</LinearLayout>